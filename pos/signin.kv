<SigninWindow>:
    id: main_win
    orientation: "vertical"
    spacing: 10
    space_x: self.size[0] / 3
    canvas.before:
        Color:
            rgba: (1,1,1,1)
        Rectangle:
            size: self.size
            pos: self.pos
    BoxLayout:
        size_hint_y: None
        height: 50
        canvas.before:
            Color:
                rgba: (.06,.45,.45,1)
            Rectangle:
                size: self.size
                pos: self.pos
        Label:
            text: "Acces Control"
            bold: True
            size_hint_x: .9

        Button:
            text: "x"
            size_hint_x: .1
    BoxLayout:
        orientation: "vertical"
        padding: main_win.space_x, 10
        # spacing: 20
        BoxLayout:
            orientation: "vertical"
            spacing: 10
            size_hint_y: None
            height: 80
            TextInput:
                hint_text: "Username"
                multiline: False
            TextInput:
                hint_text: "Password"
                multiline: False
        Label:
            id: sp
            size_hint_y: None
            height: 40
        Button:
            size_hint_y: None
            height: 40
            text: "Sign In"
        Label:
            id: sp2
